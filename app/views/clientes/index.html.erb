<h1>Clientes Cadastrados</h1>

<table border="1">
  <tr>
    <th>Tipo</th>
    <th>Cpf_Cnpj</th>
    <th>Razao social</th>
    <th>Nome fantasia</th>
    <th>Cidade</th>
    <th>Status</th>
    <th colspan="3">Ação</th>
  </tr>

<% for cliente in @clientes %>
  <tr>
    <td><%=h cliente.tipo_cliente %></td>
    <td><%=h cliente.cpf_cnpj %></td>
    <td><%=h cliente.razao_social %></td>
    <td><%=h cliente.nome_fantasia %></td>
    <td><%=h cliente.cidade.descricao + '/' + cliente.uf %></td>
    <td><%=h cliente.status %></td>
    <td><%= link_to 'Detalhes', cliente %></td>
    <td><%= link_to 'Alterar', edit_cliente_path(cliente) %></td>
    <td><%= link_to 'Excluir', cliente, :confirm => 'Tem Certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

