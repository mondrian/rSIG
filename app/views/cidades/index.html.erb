<h1>Listagem cidades</h1>

<table>
  <tr>
    <th>Uf</th>
    <th>Cidade</th>
  </tr>

<% @cidades.each do |cidade| %>
  <tr>
    <td><%=h cidade.uf %></td>
    <td><%=h cidade.cidade %></td>
    <td><%= link_to 'Exibir', cidade %></td>
    <td><%= link_to 'Alterar', edit_cidade_path(cidade) %></td>
    <td><%= link_to 'Excluir', cidade, :confirm => 'VocÃª Tem Certeza Que Quer Excluir a Cidade ?', :method => :delete %></td>
  </tr>
<% end %>
</table>

