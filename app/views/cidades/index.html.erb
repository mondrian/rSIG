<table>
  <tr>
    <th>Uf</th>
    <th>Cidade</th>
  </tr>

<% @cidades.each do |cidade| %>
  <tr>
    <td><%=h cidade.uf %></td>
    <td><%=h cidade.descricao %></td>
    <td><%= link_to 'Exibir', cidade %></td>
    <td><%= link_to 'Alterar', edit_cidade_path(cidade) %></td>
    <td><%= link_to 'Excluir', cidade, :confirm => "Excluir a Cidade #{cidade.descricao}?", :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New cidade', new_cidade_path %>